<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>REST API - MVC</title>
    <link rel="stylesheet" href="https://www.unpkg.com/bulma@0.9.3/css/bulma.css">
</head>
<body>
    <div id="app" class="container is-max-desktop mt-5">
        <h1 class="title">Product List</h1>
        <div>
            <a href="/create" class="button is-success">Add New</a>
            <table class="table is-striped is-bordered mt-e is-fullwidth" style="margin: 10px auto;">
                <thead>
                    <tr>
                        <th>Product Name</th>
                        <th>Product Price</th>
                        <th class="has-text-centered">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% products.forEach(el=> { %>
                    <tr>
                        <td><%= el.name %></td>
                        <td><%= el.price %></td>
                        <td class="has-text-centered">
                            <a href="/edit/<%= el.id %>" class="button is-warning is-small">Edit</a>
                            <a onclick=<%='del('+el.id+')'%> class="button is-danger is-small" style="margin-left: 5px">Delete</a>
                        </td>
                    </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>
    <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
    <script>
        let del = (id) => {
            axios.delete('/api/product/' + id).then((result) => {
                alert('Info Status ' + result.status)
                location.reload();
            }).catch((err) => {
                alert('error ' + err)
            });
        }
    </script>
</body>
</html>